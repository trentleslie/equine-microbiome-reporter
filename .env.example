# Development Environment Configuration
# Uses mock hippovet directory structure for consistency

# ===== KRAKEN2 CONFIGURATION =====
# Mock HippoVet path that works on both machines
KRAKEN2_DB_PATH=/mnt/c/Users/${USER}/hippovet/epi2melabs/data/PlusPFP-8
KRAKEN2_SILVA_DB=/mnt/c/Users/${USER}/hippovet/Desktop/databases/EuPathDB
KRAKEN2_VIRAL_DB=/mnt/c/Users/${USER}/hippovet/Desktop/databases/Viral

# Kraken2 executable
KRAKEN2_EXECUTABLE=kraken2
KRAKEN2_BUILD_EXECUTABLE=kraken2-build

# Performance settings
KRAKEN2_THREADS=4
KRAKEN2_MEMORY_MAPPING=false
KRAKEN2_CONFIDENCE_THRESHOLD=0.1
KRAKEN2_MINIMUM_HIT_GROUPS=2

# ===== CLINICAL FILTERING =====
MIN_ABUNDANCE_THRESHOLD=0.01
CLINICAL_RELEVANCE_THRESHOLD=0.1
PLUSPFP16_EXCLUDE_KINGDOMS=Plantae,Archaea
EUPATHDB_MIN_ABUNDANCE=0.5
VIRAL_CLINICAL_ONLY=true

# ===== REPORT GENERATION =====
REPORT_LANGUAGE=en
INSTITUTION_NAME=HippoVet+
INSTITUTION_LOGO=/mnt/c/Users/${USER}/hippovet/Desktop/logo.png
REPORT_FOOTER=Generated by HippoVet+ Laboratory

# ===== BATCH PROCESSING =====
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_SAMPLES=4

# Output directories - using mock hippovet structure
DEFAULT_OUTPUT_DIR=/mnt/c/Users/${USER}/hippovet/Desktop/results
EXCEL_REVIEW_DIR=/mnt/c/Users/${USER}/hippovet/Desktop/excel_review
PDF_OUTPUT_DIR=/mnt/c/Users/${USER}/hippovet/Desktop/pdf_reports

# ===== OPTIONAL FEATURES =====
ENABLE_LLM_RECOMMENDATIONS=false
LLM_PROVIDER=none
KRAKEN2_USE_BRACKEN=false
USE_MOCK_KRAKEN=false

# ===== TRANSLATION =====
# Translation service: "free" (no API key), "gemini" (free tier), or "google_cloud" (paid)
TRANSLATION_SERVICE=free
# Target languages (comma-separated): pl=Polish, ja=Japanese, de=German, etc.
TRANSLATION_TARGET_LANGUAGES=pl,ja

# Gemini API (recommended for better translation quality - free tier available)
# Get your API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
# Alternative env var name (also supported):
# GOOGLE_API_KEY=
# Model selection (default: gemini-2.0-flash-lite for higher rate limits)
# Options: gemini-2.0-flash-lite, gemini-2.0-flash, gemini-2.5-flash
GEMINI_MODEL=gemini-2.0-flash-lite
# Note: Free tier has rate limits (~15 requests/minute, ~1500/day)
# The service will retry with backoff on rate limit errors

# Google Cloud Translation (optional, only needed if TRANSLATION_SERVICE=google_cloud)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_CREDENTIALS_PATH=

# Translation cache directory
TRANSLATION_CACHE_DIR=translation_cache

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=/mnt/c/Users/${USER}/hippovet/Desktop/pipeline.log
SAVE_INTERMEDIATE_FILES=true

# ===== PATHS TO YOUR DATA =====
EPI2ME_INSTANCES_DIR=/mnt/c/Users/${USER}/hippovet/epi2melabs/instances
FASTQ_INPUT_DIR=/mnt/c/data
WEEKLY_BATCH_DIR=/mnt/c/data/DIAG_$(date +%d_%m_%Y)