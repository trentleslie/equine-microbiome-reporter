{# Page 1: Title Page #}
{% set page_num = 1 %}
{% include 'base/page_header.j2' %}

<div class="title-content">
    <div class="main-title">
        <h1>COMPREHENSIVE FECAL EXAMINATION</h1>
        <h2>DNA sequencing</h2>
    </div>
    
    <div class="dna-imagery">
        <img src="assets/dna_stock_photo.jpg" alt="DNA Helix" class="dna-image">
    </div>
    
    <div class="sample-info">
        <div class="info-grid">
            <div class="info-row">
                <span class="label">Patient Name:</span>
                <span class="value">{{ patient.name }}</span>
            </div>
            <div class="info-row">
                <span class="label">Species:</span>
                <span class="value">{{ patient.species }}</span>
            </div>
            <div class="info-row">
                <span class="label">Age:</span>
                <span class="value">{{ patient.age }}</span>
            </div>
            <div class="info-row">
                <span class="label">Sample Number:</span>
                <span class="value">{{ patient.sample_number }}</span>
            </div>
        </div>
    </div>
    
    <div class="laboratory-accreditation">
        <h3>Laboratory Accreditation</h3>
        <p>This report has been generated by HippoVet Laboratory, an ISO 15189 accredited facility specializing in veterinary microbiome analysis.</p>
        <div class="accreditation-logos">
            <!-- Accreditation logos would go here -->
        </div>
    </div>
</div>

{% include 'base/page_footer.j2' %}