{# Page 1: Title Page with sophisticated design #}
<div class="diagonal-stripes"></div>
<div class="dna-background"></div>

<div class="title-page-content">
    <div>
        <h1 class="main-title">COMPREHENSIVE<br>FECAL<br>EXAMINATION</h1>
        <p class="subtitle">DNA sequencing</p>
    </div>
    
    <div style="flex-grow: 1; display: flex; flex-direction: column; justify-content: center;">
        <div class="pill-row">
            <span style="font-size: 12pt; color: var(--text-light); margin-bottom: 5mm; display: block;">Patient Name:</span>
            <span class="pill-box">{{ patient.name }}</span>
            <span style="font-size: 12pt; color: var(--text-light); margin: 0 10mm;">Species and Age:</span>
            <span class="pill-box">{{ patient.species }}, {{ patient.age }}</span>
            <span style="font-size: 12pt; color: var(--text-light); margin: 0 10mm;">Test Number:</span>
            <span class="pill-box">{{ patient.sample_number }}</span>
        </div>
        
        <div class="pill-row" style="margin-top: 20mm;">
            <span style="font-size: 12pt; color: var(--text-light); margin-bottom: 5mm; display: block;">Material Received:</span>
            <span class="pill-box">{{ patient.date_received }}</span>
            <span style="font-size: 12pt; color: var(--text-light); margin: 0 10mm;">Analysis Date:</span>
            <span class="pill-box">{{ patient.date_analyzed }}</span>
        </div>
        
        <div class="pill-row" style="margin-top: 20mm;">
            <span style="font-size: 12pt; color: var(--text-light); margin-bottom: 5mm; display: block;">Performed by:</span>
            <span class="pill-box">{{ patient.performed_by }}</span>
            <span style="font-size: 12pt; color: var(--text-light); margin: 0 10mm;">Requested by:</span>
            <span class="pill-box">{{ patient.requested_by }}</span>
        </div>
    </div>
    
    {# DNA helix background image #}
    {% if config.assets_path %}
    <div style="position: absolute; bottom: 80mm; left: 0; right: 0; text-align: center; z-index: 0;">
        <img src="{{ config.assets_path }}/dna_stock_photo.jpg" alt="" style="width: 100%; max-width: 200mm; opacity: 0.08;">
    </div>
    {% endif %}
</div>

<div class="page-footer">
    <div>
        <img src="{{ config.assets_path }}/hippovet_logo.png" alt="HippoVet" class="logo">
    </div>
    <div class="page-number">1/5</div>
    <div style="text-align: right;">
        <strong style="font-size: 14pt; color: var(--dark-blue);">MEMT LABORATORY</strong>
    </div>
</div>