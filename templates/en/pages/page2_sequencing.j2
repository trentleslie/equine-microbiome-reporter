{# Page 2: Sequencing Results #}
{% set page_num = 2 %}
{% include 'base/page_header.j2' %}

<div class="sequencing-content">
    <div class="green-header">
        <h2>DNA SEQUENCING RESULTS</h2>
    </div>
    
    <div class="species-distribution">
        <h3>Top Species Distribution</h3>
        <div class="chart-container">
            {# Top 15 species with horizontal bar chart #}
            {% for species in data.species_list[:15] %}
            <div class="species-bar">
                <div class="species-name">{{ species.species }}</div>
                <div class="bar-container">
                    <div class="bar" style="width: {{ (species.percentage / data.species_list[0].percentage * 100) }}%"></div>
                    <div class="percentage">{{ "%.2f"|format(species.percentage) }}%</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    
    <div class="phylum-summary">
        <div class="green-header">
            <h3>PHYLUM DISTRIBUTION</h3>
        </div>
        <div class="phylum-grid">
            {% for phylum, percentage in data.phylum_distribution.items() %}
            <div class="phylum-item">
                <span class="phylum-name">{{ phylum }}:</span>
                <span class="phylum-percentage">{{ "%.1f"|format(percentage) }}%</span>
            </div>
            {% endfor %}
        </div>
    </div>
    
    <div class="dysbiosis-section">
        <div class="green-header">
            <h3>DYSBIOSIS INDEX</h3>
        </div>
        <div class="dysbiosis-score">
            <div class="score-value">{{ "%.1f"|format(data.dysbiosis_index) }}</div>
            <div class="score-interpretation">
                {% if data.dysbiosis_category == "normal" %}
                    <span class="status-normal">Normal Range</span>
                {% elif data.dysbiosis_category == "mild" %}
                    <span class="status-mild">Mild Dysbiosis</span>
                {% else %}
                    <span class="status-severe">Severe Dysbiosis</span>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% include 'base/page_footer.j2' %}