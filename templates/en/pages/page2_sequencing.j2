{# Page 2: Sequencing Results with professional charts #}
<div class="content-header">
    <div>
        <img src="{{ config.assets_path }}/hippovet_logo.png" alt="HippoVet" class="logo">
    </div>
    <div style="display: flex; gap: 10px;">
        <span class="pill-box">{{ patient.name }}</span>
        <span class="pill-box">{{ patient.species }}, {{ patient.age }}</span>
        <span class="pill-box">Sample: {{ patient.sample_number }}</span>
    </div>
    <div style="text-align: right; font-size: 9pt; line-height: 1.4;">
        <div>Received: {{ patient.date_received }}</div>
        <div>Analyzed: {{ patient.date_analyzed }}</div>
        <div>Performed by: {{ patient.performed_by }}</div>
        <div>Requested by: {{ patient.requested_by }}</div>
    </div>
</div>

<div class="content-area">
    <div class="section-header">SEQUENCING RESULTS</div>
    
    <h3 style="color: var(--primary-blue); margin-bottom: 10mm; font-size: 16pt;">MICROBIOTIC PROFILE</h3>
    
    {# Embed species distribution chart #}
    <img src="{{ charts.species_distribution }}" alt="Species Distribution" class="chart-img">
    
    <div class="section-header">PHYLUM DISTRIBUTION IN GUT MICROFLORA</div>
    
    {# Embed phylum distribution chart #}
    <img src="{{ charts.phylum_distribution }}" alt="Phylum Distribution" class="chart-img">
    
    {# Dysbiosis Index section #}
    <div class="dysbiosis-index">
        <div style="font-size: 24pt; margin-bottom: 5mm;">
            Dysbiosis Index (DI): {{ "%.1f"|format(data.dysbiosis_index) }}
        </div>
        <div style="font-size: 14pt;">
            Category: 
            {% if data.dysbiosis_category == "normal" %}
                <span class="status-badge status-normal">Normal microbiota</span>
            {% elif data.dysbiosis_category == "mild" %}
                <span class="status-badge status-mild">Mild dysbiosis</span>
            {% else %}
                <span class="status-badge status-severe">Severe dysbiosis</span>
            {% endif %}
        </div>
    </div>
    
    <p style="font-size: 10pt; color: var(--text-light); text-align: center; margin-top: 10mm;">
        Scale: 0-5 normobiotic; 20 slight dysbiosis; 21-50 moderate; >50 severe dysbiosis microbiota
    </p>
</div>

<div class="page-footer">
    <div>
        <strong>HippoVet Laboratory</strong><br>
        <span style="font-size: 9pt;">Veterinary Microbiome Analysis Center</span>
    </div>
    <div class="page-number">2/5</div>
    <div style="text-align: right;">
        <strong>MEMT LABORATORY</strong><br>
        <span style="font-size: 9pt;">www.hippovet.com</span>
    </div>
</div>