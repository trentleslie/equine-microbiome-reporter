{# Reusable header component #}
<header class="report-header">
    <div class="header-bg">
        <div class="logo-section">
            <img src="assets/hippovet_logo.png" alt="HippoVet Logo" class="logo">
        </div>
        <div class="patient-info">
            <div class="pill-box">{{ patient.name }}</div>
            <div class="pill-box">{{ patient.species }}</div>
            <div class="pill-box">{{ patient.age }}</div>
            <div class="pill-box">Sample: {{ patient.sample_number }}</div>
        </div>
        <div class="accreditation">
            <div>Received: {{ patient.date_received }}</div>
            <div>Analyzed: {{ patient.date_analyzed }}</div>
            <div>Performed by: {{ patient.performed_by }}</div>
            <div>Requested by: {{ patient.requested_by }}</div>
        </div>
    </div>
</header>