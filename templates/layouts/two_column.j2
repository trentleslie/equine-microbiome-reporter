{# Two column layout for educational content (page 5) #}
{% extends "layouts/base.j2" %}

{% block content %}
<div class="page two-column-page">
    {# Page header #}
    <div class="content-header">
        {% block page_header %}{% endblock %}
    </div>
    
    {# Two-column content area #}
    <div class="content-area two-column-content">
        <div class="column-left">
            {% block left_column %}{% endblock %}
        </div>
        <div class="column-right">
            {% block right_column %}{% endblock %}
        </div>
    </div>
    
    {# Page footer #}
    {% block page_footer %}{% endblock %}
</div>
{% endblock %}

{% block page_styles %}
.two-column-page .content-header {
    background-color: var(--gray-bg);
    padding: 15mm 25mm;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-gray);
}

.two-column-content {
    display: flex;
    gap: 20mm;
    padding: 20mm 25mm 40mm 25mm;
}

.column-left, .column-right {
    flex: 1;
}

.two-column-page .section-header {
    background-color: var(--green);
    color: var(--white);
    padding: 8px 15px;
    margin: 0 0 15mm 0;
    font-weight: 700;
    font-size: 14pt;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.educational-section {
    margin: 15mm 0;
}

.educational-section h4 {
    color: var(--primary-blue);
    font-size: 12pt;
    margin-bottom: 8mm;
    font-weight: 600;
}

.educational-section p {
    font-size: 10pt;
    line-height: 1.6;
    margin-bottom: 8mm;
    text-align: justify;
}
{% endblock %}